                            <!--<mainClass>org.rabbit.LineCount</mainClass>-->
                        <!--</manifest>-->
                    <!--</archive>-->
                <!--</configuration>-->
            <!--</plugin>-->

           <!-- 只是生成MANIFEST.MF文件还不够，
           maven-dependency-plugin插件用于将依赖包拷贝到
